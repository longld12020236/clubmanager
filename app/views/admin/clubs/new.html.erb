<div class="innerpage">
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <h3><%= t "new_club" %></h3>
        <%= form_for [:admin, @club] do |f| %>
          <div class="form-group">
            <%= f.label t "question_organization" %>
            <%= f.select :organization_id,
              @organizations.collect {|item| [item.name, item.id]}, {},
              {class: "form-control selectpicker", "data-live-search": true} %>
          </div><br>
          <div class="form-group">
            <%= f.label t "club_name" %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label t "notification" %>
            <%= f.text_field :notification %>
          </div>
          <div class="form-group">
            <%= f.label t "descriptions_club" %>
            <%= f.text_area :description, class: "text_area" %>
          </div>
          <div class="form-group">
            <%= f.submit t "create" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
