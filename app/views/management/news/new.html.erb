<div class="innerpage">
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <h3><%= t "new_news" %></h3>
        <%= form_for [:management, @news] do |f| %>
          <div class="form-group">
            <%= f.label t "question_organization" %>
            <%= f.select :event_id,
              @clubs.collect {|item| [item.name, item.id]}, {},
              {class: "form-control selectpicker", "data-live-search": true} %>
          </div><br>
          <%= select_tag "foo[bar]", grouped_options_for_select(@clubs_option)  %>
          <div class="form-group">
            <%= f.label t "title_news" %>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <%= f.label t "descriptions_news" %>
            <%= f.cktext_area :content, class: "text_area" %>
          </div>
          <div class="form-group">
            <%= f.submit t "create" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
