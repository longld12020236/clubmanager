<header id="header">
  <%= link_to "#", class: "logo" do %>
    <%= image_tag "logo.png" %>
  <% end %>
  <ul class="icons">
    <li>
      <%= link_to "#", class: "icon fa-twitter" do %>
        <span class="label"></span>
      <% end %>
    </li>
    <li>
      <%= link_to "#", class: "icon fa-facebook" do %>
        <span class="label"></span>
      <% end %>
    </li>
    <li>
      <%= link_to "#", class: "icon fa-snapchat-ghost" do %>
        <span class="label"></span>
      <% end %>
    </li>
    <li>
      <%= link_to "#", class: "icon fa-globe" do %>
        <span class="label"></span>
      <% end %>
    </li>
    <li>
      <% if user_signed_in? %>
        <div class="dropdown">
          <%= link_to "#", {class: "icon dropdown-toggle",
            "data-toggle": "dropdown"} do %>
            <%= current_user.full_name %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to t(" profile"), current_user,
                class: "fa fa-file-o" %>
            </li><br>
            <li>
              <%= link_to t(" club joined"), t("href"),
                class: "fa fa-align-justify" %>
            </li><br>
            <li>
              <%= link_to t(" update profile"), edit_user_path(current_user),
                class: "fa fa-cog" %>
            </li>
          </ul>
        </div>
      <% else %>
        <%= link_to "#sessionModal", class: "icon", data: {toggle: "modal"} do %>
          <span class="label"></span><%= t("login_signup") %>
        <% end %>
      <% end %>
    </li>
  </ul>
</header>
